rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('Administrator');
    }

    function isPrincipal() {
      return hasRole('Principal');
    }

    function isHOD() {
      return hasRole('HOD');
    }

    function isLecturer() {
      return hasRole('Lecturer');
    }

    function isStudent() {
      return hasRole('Student');
    }

    // --- COLLECTION RULES ---

    // 1. COLLEGES
    match /colleges/{collegeId} {
      // Allow read for selection lists (Registration)
      allow read: if true;
      // Strictly restrict all writes (Create, Update, Delete) to Administrators
      allow write: if isAdmin();
    }

    // 2. USERS
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow create: if true; // Allow signup
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (isOwner(userId) && 
         request.resource.data.role == resource.data.role &&
         request.resource.data.status == resource.data.status &&
         request.resource.data.collegeId == resource.data.collegeId
        )
      );
      allow delete: if isAdmin() || isOwner(userId);
    }

    // 3. TEAMS
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create: if isStudent();
      allow update: if isAuthenticated();
    }

    // 4. PROJECTS
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isStudent();
      allow update: if isAuthenticated() && (
        isStudent() || isLecturer() || isHOD() || isPrincipal() || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // 5. COMPETITIONS
    match /competitions/{compId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isPrincipal();
    }

    // 6. ANNOUNCEMENTS
    match /announcements/{announceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isPrincipal() || isHOD();
    }

    // 7. ACTIVITY LOGS
    match /logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
    }
  }
}